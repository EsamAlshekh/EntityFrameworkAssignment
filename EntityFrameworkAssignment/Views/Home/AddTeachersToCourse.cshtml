@model IEnumerable<EntityFrameworkAssignment.Models.Teacher>

@{
    ViewBag.Title = "AddTeachersToCourse";
}

<h2>AddTeachersToCourse</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeacherName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TeacherName)
        </td>
        <td>
            @Html.ActionLink("Add", "AddTeacher", new { tId=item.TeacherID ,id= ViewBag.courseId }) 
           
        </td>
    </tr>
}

</table>
<p>@Html.ActionLink("Back", "Details", new { id = ViewBag.courseId })</p>

