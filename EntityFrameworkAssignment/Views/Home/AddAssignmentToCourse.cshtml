@model IEnumerable<EntityFrameworkAssignment.Models.Assignment>

@{
    ViewBag.Title = "AddAssignmentToCourse";
}

<h2>AddAssignmentToCourse</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AssignmentName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentName)
            </td>
            <td>
                @Html.ActionLink("Add", "AddAssignment", new { aId = item.AssignmentID, id = ViewBag.courseId })

            </td>
        </tr>


}

</table>
